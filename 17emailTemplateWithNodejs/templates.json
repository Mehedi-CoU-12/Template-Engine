{
    "layouts": {
        "main": "<!DOCTYPE html>\n<html lang=\"en\">\n    <head>\n        <meta charset=\"UTF-8\" />\n        <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\" />\n        <title>{{title}}</title>\n        <link rel=\"stylesheet\" href=\"/css/styles.css\" />\n        <script\n            src=\"https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js\"\n        ></script>\n    </head>\n    <body>\n        {{{body}}}\n        <script src=\"/js/app.js\"></script>\n    </body>\n</html>"
    },
    "views": {
        "index": "<div class=\"container\">\n    <header class=\"toolbox\">\n        <h1>{{title}}</h1>\n        <div class=\"tools\">\n            <button id=\"add-text\" class=\"tool-btn\">\n                <span class=\"icon\">📝</span>\n                Text\n            </button>\n            <button id=\"add-image\" class=\"tool-btn\">\n                <span class=\"icon\">🖼️</span>\n                Image\n            </button>\n            <button id=\"add-button\" class=\"tool-btn\">\n                <span class=\"icon\">🔘</span>\n                Button\n            </button>\n            <button id=\"user-button\" class=\"tool-btn\">\n                <span class=\"icon\"></span>\n                Take User Input\n            </button>\n        </div>\n        <div class=\"actions\">\n            <button id=\"save-template\" class=\"action-btn\">💾 Save</button>\n            <button id=\"load-template\" class=\"action-btn\">📁 Load</button>\n            <button id=\"copy-json\" class=\"action-btn\">📋 Copy JSON</button>\n        </div>\n    </header>\n    <main class=\"main-content\">\n        <section class=\"canvas-section\">\n            <h2>Live Preview</h2>\n            <div id=\"canvas\" class=\"canvas\">\n                <div class=\"empty-state\">\n                    <p>Click the buttons above to add elements</p>\n                </div>\n            </div>\n        </section>\n        <aside class=\"properties-panel\">\n            <h2>Properties</h2>\n            <div id=\"properties-content\" class=\"properties-content\">\n                <p>Select an element to edit its properties</p>\n            </div>\n        </aside>\n        <aside class=\"json-panel\">\n            <h2>JSON Output</h2>\n            <pre id=\"json-output\" class=\"json-output\">{}</pre>\n        </aside>\n    </main>\n    <div id=\"load-modal\" class=\"modal\">\n        <div class=\"modal-content\">\n            <h3>Load Template</h3>\n            <div id=\"template-list\"></div>\n            <button onclick=\"closeModal()\" class=\"close-btn\">Close</button>\n        </div>\n    </div>\n</div>",
        "form": "<div class='form-container'>\n    <h1>User Data Form</h1>\n    <p>Fill out the form below to save your data to the system.</p>\n\n    <div id='data-tab' class='tab-pane'>\n        <div class='data-form'>\n            <div class='form-group'>\n                <label>Name</label>\n                <input\n                    type='text'\n                    id='name'\n                    placeholder='Your full name'\n                    oninput='updatePreview()'\n                />\n            </div>\n\n            <div class='form-group'>\n                <label>Email</label>\n                <input\n                    type='email'\n                    id='email'\n                    placeholder='your.email@example.com'\n                    oninput='updatePreview()'\n                />\n            </div>\n\n            <div class='form-group'>\n                <label>Phone</label>\n                <input\n                    type='text'\n                    id='phone'\n                    placeholder='+1 (555) 123-4567'\n                    oninput='updatePreview()'\n                />\n            </div>\n\n            <div class='form-group'>\n                <label>Company</label>\n                <input\n                    type='text'\n                    id='company'\n                    placeholder='Your company name'\n                    oninput='updatePreview()'\n                />\n            </div>\n\n            <div class='form-group'>\n                <label>Position</label>\n                <input\n                    type='text'\n                    id='position'\n                    placeholder='Your job title'\n                    oninput='updatePreview()'\n                />\n            </div>\n\n            <div class='form-group'>\n                <label>Skills (one per line)</label>\n                <textarea\n                    id='skills'\n                    rows='4'\n                    placeholder='JavaScript&#10;React&#10;Node.js&#10;Python'\n                    oninput='updatePreview()'\n                ></textarea>\n            </div>\n        </div>\n\n        <div class='button-group'>\n            <button\n                onclick='saveUserData()'\n                type='button'\n                class='btn btn-primary'\n            >Save Data</button>\n            <a href='/' class='btn btn-outline'>Back to Template Builder</a>\n        </div>\n\n    </div>\n\n    <div class='preview-section'>\n        <h3>Data Preview</h3>\n        <div id='data-preview' class='preview-data'>\n            Fill out the form above to see a preview of your data...\n        </div>\n    </div>\n</div>"
    }
}
